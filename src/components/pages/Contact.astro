---
import Layout from '../../layouts/Layout.astro';
import Marquee from '../Marquee.astro';
import { Mail, Send, Github, Facebook } from 'lucide-astro';
import { useTranslations } from '../../i18n/utils';

export interface Props {
  lang: 'en' | 'id';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout
  title={lang === 'id' ? 'Kontak - Bang_syaii' : 'Contact - Bang_syaii'}
  description={lang === 'id' 
    ? 'Hubungi Bang_syaii untuk kolaborasi rekayasa perangkat lunak, pengembangan full stack, atau konsultasi teknis.'
    : 'Get in touch with Bang_syaii for software engineering collaborations, full stack development, or technical consultations.'}
  lang={lang}
>
  <section class="section relative">
    <div class="container">
      <div class="mb-16 reveal-element">
        <p class="text-[#69de10] font-mono font-bold tracking-widest uppercase mb-4 text-sm bg-white/5 inline-block px-2 py-1">// {t('contact.title')}</p>
        <h1 class="text-5xl md:text-7xl font-black mb-8 tracking-tighter text-white">{t('contact.title')} <br/> <span class="text-transparent text-stroke">{t('contact.subtitle')}</span></h1>
        <div class="w-24 h-2 bg-[#69de10] mb-8"></div>
        <p class="text-xl text-gray-400 max-w-2xl font-mono leading-relaxed">
          {t('contact.desc')}
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        <div class="lg:col-span-7 reveal-element reveal-delay-200">
          <div class="modern-brutalist-card p-8 bg-[#1a1a1a]">
            <form class="space-y-8">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="group">
                  <label for="name" class="block mb-2 font-display font-bold text-lg uppercase tracking-wider text-white group-focus-within:text-[#69de10] transition-colors">{t('contact.form.name')}</label>
                  <input
                    type="text"
                    id="name"
                    class="w-full p-4 bg-[#0f0f0f] border-2 border-white/20 text-white font-mono focus:border-[#69de10] focus:bg-[#0f0f0f] focus:outline-none transition-all duration-300 shadow-[4px_4px_0_0_rgba(255,255,255,0.1)] focus:shadow-[4px_4px_0_0_#69de10]"
                    placeholder="John Doe"
                  />
                </div>
                <div class="group">
                  <label for="email" class="block mb-2 font-display font-bold text-lg uppercase tracking-wider text-white group-focus-within:text-[#69de10] transition-colors">{t('contact.form.email')}</label>
                  <input
                    type="email"
                    id="email"
                    class="w-full p-4 bg-[#0f0f0f] border-2 border-white/20 text-white font-mono focus:border-[#69de10] focus:bg-[#0f0f0f] focus:outline-none transition-all duration-300 shadow-[4px_4px_0_0_rgba(255,255,255,0.1)] focus:shadow-[4px_4px_0_0_#69de10]"
                    placeholder="john@example.com"
                  />
                </div>
              </div>

              <div class="group">
                <label for="message" class="block mb-2 font-display font-bold text-lg uppercase tracking-wider text-white group-focus-within:text-[#69de10] transition-colors">{t('contact.form.message')}</label>
                <textarea
                  id="message"
                  rows="6"
                  class="w-full p-4 bg-[#0f0f0f] border-2 border-white/20 text-white font-mono focus:border-[#69de10] focus:bg-[#0f0f0f] focus:outline-none transition-all duration-300 shadow-[4px_4px_0_0_rgba(255,255,255,0.1)] focus:shadow-[4px_4px_0_0_#69de10]"
                  placeholder="..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="modern-brutalist-button w-full md:w-auto py-4 px-12 text-lg accent-secondary font-display tracking-wider"
              >
                {t('contact.form.send')}
              </button>
            </form>
          </div>
        </div>

        <div class="lg:col-span-5 reveal-element reveal-delay-300 flex flex-col gap-6">
          
          <a href="mailto:saipulrohman3431@gmail.com" class="group relative bg-[#111] p-8 border-[3px] border-[#69de10] shadow-[8px_8px_0_0_#fff] hover:shadow-[12px_12px_0_0_#69de10] hover:translate-x-[-4px] hover:translate-y-[-4px] transition-all duration-300 overflow-hidden">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
              <Mail class="w-32 h-32 text-white" />
            </div>
            
            <div class="relative z-10">
              <h3 class="text-2xl font-black text-white mb-2 uppercase tracking-tighter group-hover:text-[#69de10] transition-colors">Email Me</h3>
              <p class="text-xl md:text-3xl font-bold text-[#69de10] break-all group-hover:text-white transition-colors">
                saipulrohman3431<br/>@gmail.com
              </p>
              
              <div class="mt-8 flex items-center gap-3">
                <div class="bg-[#69de10] text-black px-4 py-2 font-mono text-sm font-black uppercase tracking-widest group-hover:bg-white transition-colors">
                  Click to Send
                </div>
                <span class="text-2xl text-[#69de10] group-hover:translate-x-2 transition-transform group-hover:text-white">â†’</span>
              </div>
            </div>
          </a>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <!-- Telegram Card -->
            <a href="https://t.me/bang_syaii" target="_blank" class="group bg-[#111] p-6 border-[3px] border-white hover:border-[#69de10] transition-colors duration-300 relative overflow-hidden">
              <div class="absolute -bottom-4 -right-4 text-white/5 group-hover:text-[#69de10]/10 transition-colors">
                <Send class="w-24 h-24" />
              </div>
              <h3 class="text-xl font-bold text-white mb-4 relative z-10">Telegram</h3>
              <p class="text-sm font-mono text-[#69de10] font-bold relative z-10 group-hover:text-white transition-colors">@bang_syaii</p>
            </a>

            <a href="https://github.com/LT-SYAII" target="_blank" class="group bg-[#111] p-6 border-[3px] border-white hover:border-[#69de10] transition-colors duration-300 relative overflow-hidden">
              <div class="absolute -bottom-4 -right-4 text-white/5 group-hover:text-[#69de10]/10 transition-colors">
                <Github class="w-24 h-24" />
              </div>
              <h3 class="text-xl font-bold text-white mb-4 relative z-10">GitHub</h3>
              <p class="text-sm font-mono text-[#69de10] font-bold relative z-10 group-hover:text-white transition-colors">@LT-SYAII</p>
            </a>

            <a href="https://facebook.com/bang.syaii.sbs" target="_blank" class="group bg-[#111] p-6 border-[3px] border-white hover:border-[#69de10] transition-colors duration-300 relative overflow-hidden">
              <div class="absolute -bottom-4 -right-4 text-white/5 group-hover:text-[#69de10]/10 transition-colors">
                <Facebook class="w-24 h-24" />
              </div>
              <h3 class="text-xl font-bold text-white mb-4 relative z-10">Facebook</h3>
              <p class="text-sm font-mono text-[#69de10] font-bold relative z-10 group-hover:text-white transition-colors">@bang.syaii.sbs</p>
            </a>
          </div>

          <div class="p-6 border-[3px] border-white/20 bg-white/5 backdrop-blur-sm">
             <div class="flex items-center gap-3 mb-2">
               <span class="relative flex h-3 w-3">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#69de10] opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-[#69de10]"></span>
                </span>
                <h3 class="font-bold text-white uppercase tracking-widest text-sm">{t('contact.response')}</h3>
             </div>
             <p class="text-text-secondary font-mono text-sm">{t('contact.response.desc')}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Marquee />
</Layout>